<!DOCTYPE html>
<html>

<%- include('../partials/head') %>

<body>
  <main class="body">
    
      <div id="registroForm">

        <h1 class="add-titulo">Agregar usuario Admin</h1>

        <form action="/products/create" method="POST" id="formAddProduct" >

          <br>
          <label for="name">Nombre del producto</label>
          <input class="reg-input" type="text" id="name" name="name">
          <div class="error" id="errorproduct"></div>
          <br>
          <label for="brand">Marca</label>
          <input class="reg-input" type="text" id="marcaProduct" name="brand" >
          <div class="error" id="errorMarca"></div>
          <br>
          <label for="model">Modelo</label>
          <input class="reg-input" type="text" id="modelProduct" name="model" >
          <div class="error" id="errorModel"></div>
          <br>


          <label for="color">Color</label>
          <input class="reg-input" type="text" name="color" id="color" >
          <div class="errorMessage" id="errorColor"></div>
          <br>

          <br>
          <label for="price">Precio</label>
          <input class="reg-input" type="number" id="price" name="price">
          <div class="error" id="errorPrice"></div>
          <br>
          <label for="discount">Descuento</label>
          <input class="reg-input" type="text" id="discount" name="discount" >
          <div class="error" id="errordiscount"></div>
          <br>
          <label for="category" class="form-label">Categoría:</label>
          <select name="category" id="category" class="form-control form-select-lg py-3">
            <option value="" hidden selected>Elegí la categoría</option>
            <% categories.forEach(category => { %>
              <option value="<%= category %>">
                <%= category=="in-sale" ? 'Ofertas' : 'Ultimos agregados' %>
              </option>
              <% }) %>
          </select>
<br>
<br>
          <label for="image" class="form-label">Imagen</label>
          <input class="form-control form-control-lg" type="file" name="image" id="image">
          <label for="description" class="form-label">Descripción:</label>
          <textarea name="description" id="description" class="form-control form-control-lg py-3" style="resize: none;"
            rows="5"></textarea>

<br>
<br>
<button type="submit" class="add-btn" >Guardar producto</button>
        </form>
      </div>

  </body>

</html>